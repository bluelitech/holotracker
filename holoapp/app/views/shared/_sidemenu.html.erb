<ul id="sidemenu" class="sidemenu">
    <div class="sidemenu-separator"><%= t('sidemenu.separator.link') %></div>
    <li>
        <% if @locale == :ja || @locale == "ja" %>
            <%= link_to t('sidemenu.link.million'), "/million" %>
        <% else %>
            <%= link_to t('sidemenu.link.million'), "/en/million" %>
        <% end %>
    </li>
    <li>
        <% if @locale == :ja || @locale == "ja" %>
            <%= link_to t('sidemenu.link.about'), "/about" %>
        <% else %>
            <%= link_to t('sidemenu.link.about'), "/en/about" %>
        <% end %>
    </li>
    <li>
        <% if @locale == :ja || @locale == "ja" %>
            <%= link_to t('sidemenu.link.privacy'), "/privacy" %>
        <% else %>
            <%= link_to t('sidemenu.link.privacy'), "/en/privacy" %>
        <% end %>
    </li>
    <div class="sidemenu-separator"><%= t('sidemenu.separator.member') %></div>
    <% @belongs.each do |belong, members| %>
        <details>
            <summary><%= belong %></summary>
            <% members.each do |member| %>
                <li title="<%= member["name"] %><% if @locale == :ja || @locale == "ja" %>（<%= member["name_kana"] %>）<% end %>">
                    <% if @locale == :ja || @locale == "ja" %>
                        <%= link_to member["name"], "/member/#{member['name_url']}" %>
                    <% else %>
                        <%= link_to member["name"], "/#{@locale}/member/#{member['name_url']}" %>
                    <% end %>
                </li>
            <% end %>
        </details>
    <% end %>
</ul>